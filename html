    <!-- Supabase SDK -->
    <script type="module">
        import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';

        const supabaseUrl = 'https://dbdwxouhbomjdkvqkfpo.supabase.co';
        const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRiZHd4dW9oYm9tamRrdnFrZnBvIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTIxMDg4NjgsImV4cCI6MjA2NzY4NDg2OH0.XvNqJTIKfyYX_LmYndroYzITtx7o3oT931Zv5RhNtLE';
        const supabase = createClient(supabaseUrl, supabaseKey);

        const authContainer = document.getElementById('auth-container');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const authModal = document.getElementById('auth-modal');
        const authModalContent = document.getElementById('auth-modal-content');
        const popularGrid = document.getElementById('popular-grid');
        const articlesGrid = document.getElementById('articles-grid');
        const coursesGrid = document.getElementById('courses-grid');
        const chatWindow = document.getElementById('chat-window');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('send-btn');
        const submitPollBtn = document.getElementById('submit-poll-btn');
        const pollResult = document.getElementById('poll-result');

        // --- AUTHENTICATION ---
        supabase.auth.onAuthStateChange((_, session) => updateUIForAuthState(session?.user));
        checkUser();
        async function checkUser() {
            const { data: { user } } = await supabase.auth.getUser();
            updateUIForAuthState(user);
        }
        function updateUIForAuthState(user) {
            authContainer.innerHTML = '';
            mobileMenu.innerHTML = '';
            const navLinks = `<a href="#popular" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">محبوب‌ترین‌ها</a><a href="#courses" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">دوره‌ها</a><a href="#articles" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">مقالات</a><a href="#ai-assistant" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">دستیار هوشمند</a><a href="#members" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">اعضا</a><a href="#poll" class="block md:inline-block py-2 md:py-0 hover:text-amber-400">نظرسنجی</a>`;
            const mobileNavLinks = navLinks.replaceAll('md:inline-block', '').replaceAll('md:py-0', '');
            if (user) {
                const logoutButtonHTML = `<button id="logout-btn" class="bg-red-500 text-white font-bold py-2 px-5 rounded-lg hover:bg-red-600">خروج</button>`;
                authContainer.innerHTML = `<span class="text-gray-300">خوش آمدید، ${user.email.split('@')[0]}</span>` + logoutButtonHTML;
                mobileMenu.innerHTML = mobileNavLinks + `<div class="mt-4">${logoutButtonHTML.replace('logout-btn', 'mobile-logout-btn')}</div>`;
                document.getElementById('logout-btn').addEventListener('click', () => supabase.auth.signOut());
                document.getElementById('mobile-logout-btn').addEventListener('click', () => supabase.auth.signOut());
            } else {
                const loginButtonHTML = `<div id="login-register-btn" role="button" tabindex="0" class="bg-amber-400 text-gray-900 font-bold py-2 px-4 rounded-lg hover:bg-amber-500 transition-colors cursor-pointer"><div class="flex items-center justify-center space-x-2 space-x-reverse"><svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5 fill-current"><g data-name="Layer 2"><path d="m15.626 11.769a6 6 0 1 0 -7.252 0 9.008 9.008 0 0 0 -5.374 8.231 3 3 0 0 0 3 3h12a3 3 0 0 0 3-3 9.008 9.008 0 0 0 -5.374-8.231zm-7.626-4.769a4 4 0 1 1 4 4 4 4 0 0 1 -4-4zm10 14h-12a1 1 0 0 1 -1-1 7 7 0 0 1 14 0 1 1 0 0 1 -1 1z"></path></g></svg><p>ورود / ثبت‌نام</p></div></div>`;
                authContainer.innerHTML = loginButtonHTML;
                mobileMenu.innerHTML = mobileNavLinks + `<div class="mt-4">${loginButtonHTML.replace('id="login-register-btn"', 'id="mobile-login-register-btn"')}</div>`;
                document.getElementById('login-register-btn').addEventListener('click', showAuthModal);
                document.getElementById('mobile-login-register-btn').addEventListener('click', showAuthModal);
            }
        }
        function showAuthModal() {
            authModal.classList.remove('hidden');
            authModalContent.innerHTML = `<div class="p-8"><div class="flex justify-between items-center mb-6"><h2 class="text-2xl font-bold text-white">ورود یا ثبت‌نام</h2><button id="close-modal-btn" class="text-gray-400 hover:text-white text-3xl">&times;</button></div><div id="auth-error" class="text-red-400 text-center mb-4 hidden"></div><form id="auth-form" class="space-y-4"><input type="email" id="email-input" placeholder="ایمیل" required class="w-full p-3 bg-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-400"><input type="password" id="password-input" placeholder="رمز عبور (حداقل ۶ کاراکتر)" required class="w-full p-3 bg-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-400"><div class="flex gap-4"><button type="submit" id="login-btn" class="w-full bg-amber-400 text-gray-900 font-bold py-3 rounded-lg hover:bg-amber-500">ورود</button><button type="submit" id="register-btn" class="w-full bg-gray-600 text-white font-bold py-3 rounded-lg hover:bg-gray-500">ثبت‌نام</button></div></form></div>`;
            document.getElementById('close-modal-btn').addEventListener('click', () => authModal.classList.add('hidden'));
            document.getElementById('login-btn').addEventListener('click', handleLogin);
            document.getElementById('register-btn').addEventListener('click', handleRegister);
        }
        async function handleLogin(e) { e.preventDefault(); const { error } = await supabase.auth.signInWithPassword({ email: document.getElementById('email-input').value, password: document.getElementById('password-input').value }); if(error){ document.getElementById('auth-error').textContent = "ایمیل یا رمز عبور اشتباه است."; document.getElementById('auth-error').classList.remove('hidden'); } else { authModal.classList.add('hidden'); } }
        async function handleRegister(e) { e.preventDefault(); const { error } = await supabase.auth.signUp({ email: document.getElementById('email-input').value, password: document.getElementById('password-input').value }); if(error){ document.getElementById('auth-error').textContent = "خطا در ثبت‌نام."; document.getElementById('auth-error').classList.remove('hidden'); } else { authModal.classList.add('hidden'); alert('ثبت‌نام موفق بود! لطفاً ایمیل خود را برای تایید حساب کاربری چک کنید.'); } }

        // --- DATA FETCHING ---
        async function fetchPopularItems() {
            const { data, error } = await supabase.from('courses').select('*').limit(3);
            if (error) { console.error("Error fetching popular items:", error); return; }
            popularGrid.innerHTML = '';
            data.forEach(item => {
                popularGrid.innerHTML += `<div class="popular-card w-full max-w-xs reveal"><div class="popular-card-inner flex flex-col overflow-hidden"><div class="relative"><img src="${item.imageUrl}" alt="${item.title}" class="w-full h-48 object-cover"><span class="absolute top-2 right-2 bg-amber-400 text-gray-900 text-xs font-bold px-2 py-1 rounded-full">دوره آموزشی</span></div><div class="p-6 flex flex-col flex-grow"><h3 class="text-xl font-bold mb-2 text-white">${item.title}</h3><p class="text-gray-400 mb-4 flex-grow text-sm">${item.description}</p><div class="mt-auto"><a href="#" class="inline-block bg-gray-700 text-white font-semibold py-2 px-5 rounded-lg hover:bg-gray-600 text-sm">مشاهده</a></div></div></div></div>`;
            });
        }
        async function fetchCourses() {
            const { data, error } = await supabase.from('courses').select('*');
            if (error) { console.error("Error fetching courses:", error); return; }
            coursesGrid.innerHTML = '';
            data.forEach(course => {
                coursesGrid.innerHTML += `<div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl overflow-hidden shadow-lg flex flex-col transition-all duration-300 hover:border-amber-400/50 hover:shadow-amber-500/10 hover:transform hover:-translate-y-2 reveal"><img src="${course.imageUrl}" alt="${course.title}" class="w-full h-48 object-cover"><div class="p-6 flex flex-col flex-grow"><h3 class="text-xl font-bold mb-2 text-white">${course.title}</h3><p class="text-gray-400 mb-4 flex-grow text-sm">${course.description}</p><div class="mt-auto flex justify-between items-center"><span class="text-lg font-bold text-amber-400">${course.price}</span><a href="#" class="bg-amber-400 text-gray-900 font-semibold py-2 px-4 rounded-lg hover:bg-amber-500 text-sm">ثبت نام</a></div></div></div>`;
            });
        }
        async function fetchArticles() {
            const { data, error } = await supabase.from('articles').select('*').limit(3);
            if (error) { console.error("Error fetching articles:", error); return; }
            articlesGrid.innerHTML = '';
            data.forEach(article => {
                articlesGrid.innerHTML += `<div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl overflow-hidden shadow-lg flex flex-col transition-all duration-300 hover:border-amber-400/50 hover:shadow-amber-500/10 hover:transform hover:-translate-y-2 reveal"><img src="${article.imageUrl}" alt="${article.title}" class="w-full h-48 object-cover"><div class="p-6 flex flex-col flex-grow"><h3 class="text-xl font-bold mb-2 text-white">${article.title}</h3><p class="text-gray-400 mb-4 flex-grow text-sm">${article.excerpt}</p><a href="#" class="text-amber-400 hover:text-amber-500 font-semibold mt-auto self-start">ادامه مطلب &rarr;</a></div></div>`;
            });
        }

        // --- AI ASSISTANT (Connected to Gemini) ---
        sendBtn.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', (e) => e.key === 'Enter' && sendMessage());

        async function sendMessage() {
            const messageText = chatInput.value.trim();
            if (!messageText) return;
            
            appendMessage(messageText, true);
            chatInput.value = '';
            showLoadingIndicator();

            const apiKey = "AIzaSyDamuSj4WO45KYvgQ4wxTNHwFiiz7hYpcM"; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=${apiKey}`;
            
            const prompt = `You are an expert AI assistant for railway engineers, speaking in Persian. Answer the following question in a helpful and concise way. Question: "${messageText}"`;
            
            const payload = {
                contents: [{
                    role: "user",
                    parts: [{ text: prompt }]
                }]
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API Error: ${response.statusText}`);
                }

                const result = await response.json();
                removeLoadingIndicator();

                if (result.candidates && result.candidates.length > 0) {
                    const aiResponse = result.candidates[0].content.parts[0].text;
                    appendMessage(aiResponse.replace(/\n/g, '<br>'), false);
                } else {
                    appendMessage("متاسفانه پاسخی دریافت نشد. لطفاً دوباره تلاش کنید.", false);
                }

            } catch (error) {
                console.error("Error calling Gemini API:", error);
                removeLoadingIndicator();
                appendMessage("خطایی در ارتباط با دستیار هوشمند رخ داد. لطفاً اتصال اینترنت خود را بررسی کرده و مجدداً تلاش نمایید.", false);
            }
        }

        function appendMessage(message, isUser) {
            const messageElement = document.createElement('div');
            messageElement.className = `flex items-start gap-3 ${isUser ? 'justify-end' : ''}`;
            messageElement.innerHTML = isUser ? `<div class="bg-amber-400 text-gray-900 p-4 rounded-lg rounded-br-none max-w-lg"><p>${message}</p></div><div class="bg-gray-700 p-2 rounded-full"><svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg></div>` : `<div class="bg-amber-400 p-2 rounded-full"><svg class="w-6 h-6 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V7.5a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 7.5v10.5a2.25 2.25 0 002.25 2.25z" /></svg></div><div class="bg-gray-800 p-4 rounded-lg rounded-tl-none max-w-lg"><p>${message}</p></div>`;
            chatWindow.appendChild(messageElement);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        }
        function showLoadingIndicator() {
            const indicator = `<div id="loading-indicator" class="flex items-start gap-3"><div class="bg-amber-400 p-2 rounded-full"><svg class="w-6 h-6 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V7.5a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 7.5v10.5a2.25 2.25 0 002.25 2.25z" /></svg></div><div class="bg-gray-800 p-4 rounded-lg rounded-tl-none"><div class="flex items-center space-x-2 space-x-reverse"><div class="w-2 h-2 bg-amber-400 rounded-full animate-bounce [animation-delay:-0.3s]"></div><div class="w-2 h-2 bg-amber-400 rounded-full animate-bounce [animation-delay:-0.15s]"></div><div class="w-2 h-2 bg-amber-400 rounded-full animate-bounce"></div></div></div></div>`;
            chatWindow.innerHTML += indicator;
            chatWindow.scrollTop = chatWindow.scrollHeight;
        }
        function removeLoadingIndicator() {
            const indicator = document.getElementById('loading-indicator');
            if (indicator) indicator.remove();
        }

        // --- Poll Logic ---
        submitPollBtn.addEventListener('click', async () => {
            const suggestionText = document.getElementById('poll-suggestion').value.trim();
            if (!suggestionText) {
                alert('لطفاً پیشنهاد خود را بنویسید.');
                return;
            }
            // Save the suggestion to Supabase
            const { data, error } = await supabase
                .from('suggestions')
                .insert([{ suggestion: suggestionText }]);

            if (error) {
                console.error('Error saving suggestion:', error);
                alert('خطایی در ثبت نظر رخ داد. لطفاً دوباره تلاش کنید.');
                return;
            }

            // Disable form and show thank you message
            document.getElementById('poll-suggestion').disabled = true;
            submitPollBtn.disabled = true;
            submitPollBtn.textContent = 'نظر شما ثبت شد';
            pollResult.classList.remove('hidden');
        });

        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', () => {
            const preloader = document.getElementById('preloader');
            window.addEventListener('load', () => {
                preloader.style.opacity = '0';
                preloader.style.visibility = 'hidden';
            });

            mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
            checkUser();
            fetchPopularItems();
            fetchArticles();
            fetchCourses(); 
            
            // Animation on Scroll Logic
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.reveal').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
</body>
</html>
