    <!-- Auth Modal -->
    <div id="auth-modal" class="fixed inset-0 bg-gray-900/80 modal-backdrop flex items-center justify-center hidden z-50" >
        <div class="bg-gray-800 rounded-xl shadow-2xl w-full max-w-md m-4" id="auth-modal-content"></div>
